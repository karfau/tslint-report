{
  "name": "tslint-report",
  "version": "0.1.0",
  "description": "This is a utility for maintaining a tslint rule set.",
  "repository": "https://github.com/karfau/tslint-report",
  "bugs": "https://github.com/karfau/tslint-report/issues",
  "main": "dist/report.js",
  "files": [
    "dist", "bin"
  ],
  "bin": {
    "tslint-report": "bin/tslint-report"
  },
  "engines": {
    "node": ">=8.2.0",
    "npm": ">=5.2.0"
  },
  "scripts": {
    "preinstall": "npx check-node-version --package",
    "preversion": "npm run build && npm run test",
    "check": "npx npm-check -u --skip-unused",
    "build": "tsc -p .",
    "test": "echo \"NO TESTS YET!\"",
    "tslint": "tslint -c tslint.json --project tsconfig.json -t stylish",
    "start": "ts-node src/report.ts"
  },
  "keywords": [
    "ts-lint",
    "rules"
  ],
  "author": "Christian Bewernitz",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.5",
    "fs-extra": "^5.0.0",
    "klaw-sync": "^3.0.2",
    "tslint": "^5.8.0",
    "typescript": "~2.7.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.1",
    "@types/klaw-sync": "^1.1.3",
    "@types/lodash": "^4.14.104",
    "@types/node": "^8.2.0",
    "bm-tslint-rules": "github:bettermarks/bm-tslint-rules#v0.0.8",
    "ts-node": "^5.0.1"
  },
  "peerDependencies": {
  }
}
