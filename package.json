{
  "name": "tslint-report",
  "version": "0.2.1",
  "description": "This is a utility for maintaining a tslint rule set.",
  "repository": "https://github.com/karfau/tslint-report",
  "bugs": "https://github.com/karfau/tslint-report/issues",
  "main": "dist/report.js",
  "files": [
    "dist",
    "bin",
    "rules.docs.json"
  ],
  "bin": {
    "tslint-report": "bin/tslint-report"
  },
  "engines": {
    "node": ">=8.2.0",
    "npm": ">=5.2.0"
  },
  "scripts": {
    "preinstall": "npx check-node-version --package",
    "preversion": "npm run build && npm run test",
    "check": "npx npm-check -u --skip-unused",
    "build": "tsc -p tsconfig.json",
    "test": "echo \"NO TESTS YET!\"",
    "tslint": "tslint -c tslint.json --project tsconfig.json -t stylish",
    "start": "ts-node src/report.ts"
  },
  "keywords": [
    "ts-lint",
    "rules"
  ],
  "author": "Christian Bewernitz",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.5",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2"
  },
  "devDependencies": {
    "@types/fs-extra": "5.0.4",
    "@types/glob": "5.0.36",
    "@types/lodash": "4.14.120",
    "@types/node": "10.12.24",
    "bm-tslint-rules": "github:bettermarks/bm-tslint-rules#9cd49fc",
    "ts-node": "7.0.1",
    "typescript": "3.2.2"
  },
  "peerDependencies": {
    "tslint": ">=5.0.0",
    "typescript": ">=2.1.0"
  }
}
